<!-- res/color/checkbox_color_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu sắc khi checkbox không được chọn -->
    <item android:state_checked="false" android:color="@android:color/darker_gray" />

    <!-- Màu sắc khi checkbox được chọn -->
    <item android:state_checked="true" android:color="@color/green" />
</selector>