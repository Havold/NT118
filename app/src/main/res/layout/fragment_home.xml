<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome"
    android:background="@drawable/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_night"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/night_bg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/rectangle_smooth"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:background="@drawable/rectangle"
            android:scaleType="fitXY"

            />
        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/user_icon"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="32dp"
            />


        <ImageView
            android:id="@+id/languageIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/translate"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/notification"
            android:layout_below="@+id/languageIcon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="18dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/notification_off"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/notification_off"
            android:layout_below="@+id/languageIcon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="18dp"
            android:visibility="visible"
            />


        <LinearLayout
            android:id="@+id/locationGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            >

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/location"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/locationIconRed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/location_red"
                android:layout_marginTop="6dp"

                />

            <TextView
                android:id="@+id/locationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu Duc"
                android:textSize="24dp"
                android:textStyle="bold"
                />

        </LinearLayout>



        <ImageView
            android:id="@+id/whiteStroke"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_2"
            android:layout_below="@id/locationGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/whiteStrokeFull"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_2_black"
            android:layout_below="@id/locationGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/locationGroup"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/yellowPoint"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/yellowball"
                android:layout_below="@id/locationGroup"
                android:layout_marginTop="17dp"
                android:layout_marginRight="8dp"

                />

            <ImageView
                android:id="@+id/whitePoint"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/whiteball"
                android:layout_below="@id/locationGroup"
                android:layout_marginTop="17dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updating"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>







        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:background="@drawable/sunny"
            android:layout_below="@id/locationGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/iconDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/temperate"
            android:layout_below="@id/locationGroup"
            android:layout_marginTop="260dp"
            />

        <TextView
            android:id="@+id/temperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29"
            android:textColor="@color/white"
            android:textSize="100dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/locationGroup"
            android:layout_marginTop="260dp"
            />

        <TextView
            android:id="@+id/weatherTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunny"
            android:textSize="40dp"
            android:layout_below="@id/temperate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday, 27 Sep"
            android:layout_below="@id/weatherTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/line"
            android:layout_below="@id/date"
            android:layout_marginTop="16dp"
            />


        <LinearLayout
            android:id="@+id/windGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/date"
            android:layout_marginTop="32dp"
            android:layout_toLeftOf="@id/humidityGroup"
            android:layout_marginRight="60dp"
            >

            <ImageView
                android:id="@+id/windIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/wind"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/windTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9km/h"
                android:textSize="18dp"
                android:textStyle="bold"

                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/windTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind"
                android:textSize="16dp"
                android:textColor="@color/grey"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/humidityGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/date"
            android:layout_marginTop="32dp"
            >

            <ImageView
                android:id="@+id/humidityIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/humidity"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/humidityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29%"
                android:textSize="18dp"
                android:textStyle="bold"

                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/humidityTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity"
                android:textSize="16dp"
                android:textColor="@color/grey"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/humidityGroup"
            android:layout_below="@id/date"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="60dp"
            >

            <ImageView
                android:id="@+id/rainfallIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/chance_of_rain"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/rainfallTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.8"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/rainfallTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rainfall"
                android:textSize="16dp"
                android:textColor="@color/grey"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>









    </RelativeLayout>

</FrameLayout>